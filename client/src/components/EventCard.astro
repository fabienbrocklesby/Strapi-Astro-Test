---
export interface EventCardProps {
	event: {
		attributes: {
			title: string;
			description: string;
			location: string;
			date: string;
		};
	};
	formatDate: (date: string) => string;
}
const { event, formatDate } = Astro.props;
---

<div class="py-4 px-8 bg-gray-200 w-auto rounded-lg my-4">
	<h2 class="font-bold">{event.attributes.title}</h2>
	<p>{event.attributes.description}</p>
	<div class="mt-2 text-sm italic">
		<p>{event.attributes.location}</p>
		<p>{formatDate(event.attributes.date)}</p>
	</div>
</div>
